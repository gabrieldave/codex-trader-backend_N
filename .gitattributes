# Configurar manejo de line endings
* text=auto
# Archivos espec√≠ficos que siempre deben usar LF
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sql text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
# Archivos binarios
*.pdf binary
*.epub binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pkl filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
chroma_db/* filter=lfs diff=lfs merge=lfs -text
models/* filter=lfs diff=lfs merge=lfs -text
